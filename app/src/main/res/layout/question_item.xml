<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="@dimen/cardview_default_elevation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/QuestionCardText"
                android:id="@+id/question_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:text="This is a test. This is only a test."
                />

            <TextView
                style="@style/QuestionCardText"
                android:id="@+id/question_expanded"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="69 Answers"
                android:textColor="@color/colorSecondaryText"
                style="?android:attr/borderlessButtonStyle"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="0dp"
                android:src="@drawable/ic_flash_on_black_24dp"
                android:tint="@color/colorAccent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="0dp"
                android:src="@drawable/ic_flash_on_black_24dp"
                android:tint="@color/colorAccent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="0dp"
                android:src="@drawable/ic_flash_on_black_24dp"
                android:tint="@color/colorAccent"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_account_circle_white_36dp"
                android:tint="@color/colorSecondaryText"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical|end"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>



